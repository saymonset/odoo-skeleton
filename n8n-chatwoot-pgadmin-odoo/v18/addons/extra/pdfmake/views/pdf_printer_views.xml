<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- VISTAS PARA EL MODELO DE PRUEBA (test.pdf.report) -->
    <record id="view_test_pdf_report_tree" model="ir.ui.view">
        <field name="name">test.pdf.report.tree</field>
        <field name="model">test.pdf.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_position"/>
                <field name="employer_company"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_test_pdf_report_form" model="ir.ui.view">
        <field name="name">test.pdf.report.form</field>
        <field name="model">test.pdf.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_employment_letter" 
                            type="object" 
                            string="Generar Constancia de Empleo" 
                            class="btn-primary"
                            invisible="not is_employee_record"/>
                    <button name="action_generate_hello_world" 
                            type="object" 
                            string="Generar Hola Mundo" 
                            class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="amount"/>
                        <field name="active"/>
                        <field name="partner_id"/>
                        <field name="is_employee_record"/>
                    </group>
                    <group string="Datos de Empleo" invisible="not is_employee_record">
                        <field name="employee_position"/>
                        <field name="employee_start_date"/>
                        <field name="employee_hours_per_week"/>
                        <field name="employee_work_schedule"/>
                        <field name="employer_name"/>
                        <field name="employer_position"/>
                        <field name="employer_company"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACCIÓN DE VENTANA PARA LA LISTA DE PRUEBAS -->
    <record id="action_test_pdf_report_list" model="ir.actions.act_window">
        <field name="name">Pruebas PDFMake</field>
        <field name="res_model">test.pdf.report</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENÚ PRINCIPAL DE PRUEBAS -->
    <menuitem
        id="menu_test_pdf_report"
        name="Pruebas PDFMake"
        parent="base.menu_administration"
        action="action_test_pdf_report_list"
        sequence="10"/>

</odoo>
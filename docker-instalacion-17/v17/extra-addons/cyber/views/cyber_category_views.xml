<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='cyber_category_action' model='ir.actions.act_window'>
        <field name="name">Cyber Categories</field>
        <field name="res_model">cyber.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Cyber Categories" id="cyber_category_menu" parent="fleet.menu_root" action="cyber_category_action"/>

    <!-- Form View -->
    <record id="cyber_category_view_form" model="ir.ui.view">
        <field name="name">Cyber Categories Form</field>
        <field name="model">cyber.category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="parent_id"/>
                    </group>
                </group>
                <group>
                    <field name="child_ids"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="cyber_category_view_tree" model="ir.ui.view">
        <field name="name">Cyber List</field>
        <field name="model">cyber.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

</odoo>
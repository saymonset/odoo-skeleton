{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Odoo",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 8888
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/extra-addons",
                    "remoteRoot": "/var/lib/odoo/custom_addons"
                },
                {
                    "localRoot": "${workspaceFolder}/src/odoo-18/addons",
                    "remoteRoot": "/var/lib/odoo/odoo/addons"
                }
            ]
        }
    ]
}
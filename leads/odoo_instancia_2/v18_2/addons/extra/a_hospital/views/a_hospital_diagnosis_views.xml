<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List view for Diagnosis model -->
    <record id="view_diagnosis_tree" model="ir.ui.view">
        <field name="name">Diagnosis List</field>
        <field name="model">a_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <list>
                <field name="create_date" string="Fecha"/>
                <field name="patient_id" string="Paciente"/>
                <field name="doctor_id" string="Doctor"/>
                <field name="disease_id" string="Enfermedad"/>
                <field name="description" string="Diagnóstico" widget="text"/>
                <field name="is_approved" string="Aprobado"/>
            </list>
        </field>
    </record>

    <record id="view_diagnosis_form" model="ir.ui.view">
        <field name="name">Diagnosis Form</field>
        <field name="model">a_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_open_voice_recorder"
                            type="object"
                            string="Grabar Diagnóstico por Voz"
                            class="btn-primary"
                            context="{'force_reload': True}"/> 
                    <field name="is_approved" widget="boolean_button" 
                           options="{'terminology': 'approve'}" class="oe_edit_only"/>
                </header>
                <sheet>
                    <group>
                        <group string="Información Principal" col="4">
                            <field name="visit_id" required="1"/>
                            <field name="doctor_id" required="1"/>
                            <field name="patient_id" required="1"/>
                            <field name="disease_id"/>
                            
                        </group>
                        
                        <group string="Diagnóstico">
                            <div class="o_form_label" string="Descripción del Diagnóstico"/>
                            <field name="description" 
                                   placeholder="Haga clic en 'Grabar Diagnóstico por Voz' o escriba aquí el diagnóstico..."
                                   nolabel="1"
                                   class="oe_inline"
                                   widget="text"
                                   style="min-height: 120px; width: 100%; padding: 8px;"/>
                            
                            <div class="alert alert-info mt-4" role="alert">
                                <span class="fa fa-info-circle" title="Información"/> 
                                <strong>Instrucciones:</strong> Use el botón "Grabar Diagnóstico por Voz" para grabar audio. 
                                El texto aparecerá automáticamente aquí después de la transcripción.
                            </div>
                            <field name="disease_type_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Archivos Adjuntos">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Aprobación">
                            <group>
                                <field name="is_approved"/>
                                <field name="doctor_approved"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Div para debugging -->
                <div class="oe_title">
                    <group>
                        <div class="o_form_label text-muted" string="Info de Depuración"/>
                        <field name="id" string="ID" readonly="1" nolabel="1"/>
                        <field name="create_date" string="Creado" readonly="1" nolabel="1"/>
                        <field name="write_date" string="Modificado" readonly="1" nolabel="1"/>
                    </group>
                </div>
            </form>
        </field>
    </record>

    <!-- Action to open Diagnosis views -->
    <record id="action_a_hospital_diagnosis" model="ir.actions.act_window">
        <field name="name">Diagnoses</field>
        <field name="res_model">a_hospital.diagnosis</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_diagnosis_tree"/>
        <field name="context">{'search_default_group_by_patient': 1}</field>
    </record>

</odoo>
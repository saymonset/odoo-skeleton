<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_hide_info" model="ir.ui.view">
            <field name="name">res.config.setting.form.inherit.hide.info</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_interface_section']" position="inside">
                    <setting help="Hide product information on pos">
                        <field name="pw_hide_product_info"/>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

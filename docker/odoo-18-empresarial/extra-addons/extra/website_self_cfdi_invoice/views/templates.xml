                            <option value='02' t-att-selected="forma_pago == '02'">Cheque nominativo</option>
                            <option value='03' t-att-selected="forma_pago == '03'">Transferencia electrónica de fondos</option>
                            <option value='04' t-att-selected="forma_pago == '04'">Tarjeta de crédito</option>
                            <option value='05' t-att-selected="forma_pago == '05'">Monedero electrónico</option>
                            <option value='06' t-att-selected="forma_pago == '06'">Dinero electrónico</option>
                            <option value='08' t-att-selected="forma_pago == '08'">Vales de despensa</option>
                            <option value='12' t-att-selected="forma_pago == '12'">Dación en pago</option>
                            <option value='13' t-att-selected="forma_pago == '13'">Pago por subrogación</option>
                            <option value='14' t-att-selected="forma_pago == '14'">Pago por consignación</option>
                            <option value='15' t-att-selected="forma_pago == '15'">Condonación</option>
                            <option value='17' t-att-selected="forma_pago == '17'">Compensación</option>
                            <option value='23' t-att-selected="forma_pago == '23'">Novación</option>
                            <option value='24' t-att-selected="forma_pago == '24'">Confusións</option>
                            <option value='25' t-att-selected="forma_pago == '25'">Remisión de deuda</option>
                            <option value='26' t-att-selected="forma_pago == '26'">Prescripción o caducidad</option>
                            <option value='27' t-att-selected="forma_pago == '27'">A satisfacción del acreedor</option>
                            <option value='28' t-att-selected="forma_pago == '28'">Tarjeta de débito</option>
                            <option value='29' t-att-selected="forma_pago == '29'">Tarjeta de servicios </option>
                            <option value='30' t-att-selected="forma_pago == '30'">Aplicación de anticipos</option>
                            <option value='31' t-att-selected="forma_pago == '31'">Intermediario pagos</option>
                        </select>
                    </div>
                </div>
                <div class="form-group form-field">
                    <label class="col-md-3 col-sm-4 control-label" for="order_number">Folio de Venta *</label>
                    <div class="col-md-4 col-sm-6">
                        <input type="text" class="form-control" name="order_number"
                               t-att-value="request.params.get('order_number', '')"/>
                    </div>
                </div>
                <div class="form-group form-field">
                    <label class="col-md-3 col-sm-4 control-label" for="monto_total">Monto Total * (Sin comas ",")
                    </label>
                    <div class="col-md-4 col-sm-6">
                        <input type="text" class="form-control" name="monto_total"
                               t-att-value="request.params.get('monto_total', '')"/>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                        <input class="btn btn-primary" type="submit" value="Generar Factura"/>
                    </div>
                </div>
                <section class="s_text_block">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 mb16 mt16">
                                <h4 class="o_default_snippet_text">
                                    (*) Campos Obligatorios.

                                </h4>
                            </div>
                        </div>
                    </div>
                </section>
            </form>
        </t>
    </template>


    <template id="html_result_thnks" name="Gracias"> <!-- page="True" -->
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h1 class="text-center">Gracias por su Preferencia</h1>
                                <h3 class="text-muted o_default_snippet_text">Archivos de Facturación Electrónica</h3>
                                <table class="table table-hover o_my_status_table">
                                    <thead>
                                        <tr class="active">
                                            <th>Archivo</th>
                                            <th>Pedido</th>
                                        </tr>
                                    </thead>
                                    <t t-foreach="attachments" t-as="attachment">
                                        <tr>
                                            <td>
                                                <a download="attachment.file_name"
                                                   t-att-href="'/web/content?model=website.self.invoice.web.attach&amp;field=file&amp;id='+str(attachment.id)+'&amp;download=true&amp;filename_field=file_name'">
                                                    <span t-field="attachment.file_name"/>
                                                </a>
                                            </td>
                                            <td>
                                                <p t-field="attachment.website_auto_id"/>
                                            </td>
                                        </tr>
                                    </t>

                                </table>
                                <p class="text-center">La factura fue generada de acuerdo a la información en su
                                    compra. El archivo PDF y XML fueron enviados a su correo electrónica. Si existe
                                    alguna informacion erronea no dude en contactarnos<p t-field="res_company.name"
                                                                                         class="text-center"/>.
                                </p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <template id="html_result_error_inv" name="Detalles del Error"> <!-- page="True" -->
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h1 class="text-center">Su solicitud no pudo ser Procesada.</h1>
                                <t t-foreach="errores" t-as="error">
                                    <h2 class="o_default_snippet_text">
                                        <p t-esc="error"/>
                                    </h2>
                                </t>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                                <a class="btn btn-primary" href="/portal/facturacliente/">
                                    <span class="fa fa-home"></span>
                                    Regresar
                                </a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <!-- Acciones para Website -->
    <record id="menu_self_invoice_web" model="website.menu">
        <field name="name">Facturacion</field>
        <field name="url">/portal/facturacliente/</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">13</field>
        <!-- <field name="website_id" ref="default_website"/> -->
    </record>

    <!-- Datos para Formularios en Odoo -->
    <record id="website_self_invoice_web_form" model="ir.ui.view">
        <field name="name">website_self_invoice_web.form</field>
        <field name="model">website.self.invoice.web</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Datos de la Solicitud">
                <header>
                    <field name="state" readonly="1" widget="statusbar"/>
                </header>
                <sheet>
                    <group col="4">
                        <field name="create_date" required="1" readonly="0" />
                        <newline/>
                        <field name="rfc_partner" required="1"/>
                        <field name="order_number" required="1"/>
                        <field name="monto_total"/>
                        <field name="mail_to" required="1"/>
                        <field name="ticket_pos" required="1"/>
                    </group>
                    <notebook>
                        <page string="Documentos Adjuntos">
                            <field name="attachment_ids">
                                <list string="Resultado de Facturacion" editable="bottom">
                                    <field name="file" readonly="1"/>
                                    <!--        <field name="datas_fname" invisible="1"/>-->
                                </list>
                            </field>
                        </page>
                        <page string="Errores">
                            <group>
                                <field name="error_message" nolabel="1" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


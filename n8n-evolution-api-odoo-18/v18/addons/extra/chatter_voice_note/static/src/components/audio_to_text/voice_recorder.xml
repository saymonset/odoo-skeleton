<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- Template para el VoiceRecorder -->
    <t t-name="chatter_voice_note.VoiceRecorder" owl="1">
        <div class="o_container p-4">

            <!-- Estado -->
            <div class="alert alert-info">
                <strong>Estado:</strong> <t t-esc="state.debugInfo"/>
            </div>

            <!-- Error -->
            <t t-if="state.error">
                <div class="alert alert-danger">
                    <strong>Error:</strong> <t t-esc="state.error"/>
                </div>
            </t>

            <!-- Sin notas -->
            <t t-if="audioNoteManager.state.notes.length == 0">
                <h2>Voice Recorder</h2>
                <button type="button"
                        t-on-click="toggleRecording"
                        t-att-class="state.recording ? 'btn btn-lg btn-warning' : 'btn btn-lg btn-primary'">
                    <t t-esc="state.recording ? 'Stop Recording' : 'Start Recording'"/>
                </button>
            </t>

            <!-- Con notas -->
            <t t-if="audioNoteManager.state.notes.length > 0">
                <div class="mt-3">
                    <h4>Notas grabadas: <t t-esc="audioNoteManager.state.notes.length"/></h4>

                    <t t-foreach="sortedNotes" t-as="note" t-key="note.id">
                        <div class="mb-2 p-2 border rounded shadow-sm">
                            <strong><t t-esc="note.name"/></strong>

                            <!-- REPRODUCTOR -->
                            <audio t-att-controls="true" class="d-block mt-1 w-100">
                                <source t-att-src="note.url" type="audio/webm"/>
                                Tu navegador no soporta audio.
                            </audio>

                            <button type="button"
                                    class="btn btn-sm btn-danger mt-1"
                                    t-on-click="deleteNote"
                                    t-att-data-note-id="note.id">
                                Eliminar
                            </button>
                        </div>
                    </t>

                    <!-- Botón Procesar -->
                    <div class="mt-3">
                        <button type="button"
                                class="btn btn-lg"
                                t-on-click="sendToN8N"
                                t-att-disabled="state.isSending"
                                t-att-class="state.isSending 
                                            ? 'btn-warning' 
                                            : 'btn-success' ">
                            <t t-esc="state.isSending ? 'Enviando...' : 'Procesar'"/>
                        </button>
                    </div>       

                    <!-- Componente de contactos -->
                    <ContactManagerComponent
                            contactManager="contactManager"
                            onSend="sendToN8N.bind(this)"/>

                
                </div>
            </t>

            <!-- Respuestas -->
            <t t-if="state.answer_ia">
                <div class="row mt-4">

                    <!-- Mensaje Final -->
                    <div class="col-6">
                        <div class="card">
                            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                <span>Mensaje Final</span>
                                <t t-if="state.final_message and !state.editingFinalMessage">
                                    <button type="button"
                                            class="btn btn-sm btn-light"
                                            t-on-click="startEditingFinalMessage">
                                        ✏️ Editar
                                    </button>
                                </t>
                            </div>
                            <div class="card-body">

                                <!-- Editando -->
                                <t t-if="state.editingFinalMessage">
                                    <textarea t-model="state.editedFinalMessage"
                                              class="form-control"
                                              rows="4"
                                              placeholder="Edita el mensaje final aquí..."></textarea>
                                    <div class="mt-2 d-flex gap-2">
                                        <button type="button"
                                                class="btn btn-success btn-sm"
                                                t-on-click="saveFinalMessage">✅ Reporte</button>
                                        <button type="button"
                                                class="btn btn-secondary btn-sm"
                                                t-on-click="cancelEditingFinalMessage">❌ Cancelar</button>
                                    </div>
                                </t>

                                <!-- Mostrando -->
                                <t t-elif="state.final_message">
                                    <div class="final-message-content">
                                        <t t-esc="state.final_message"/>
                                    </div>
                                </t>

                                <t t-else="">
                                    <span class="text-muted">Esperando mensaje...</span>
                                </t>
                            </div>
                        </div>
                    </div>

                    <!-- Respuesta IA -->
                    <div class="col-6">
                        <div class="card">
                            <div class="card-header bg-success text-white">Respuesta IA</div>
                            <div class="card-body">
                                <t t-if="state.answer_ia">
                                    <div class="answer-ia-content">
                                        <t t-esc="state.answer_ia"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <span class="text-muted">Esperando respuesta IA...</span>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reporte Médico -->
                <t t-if="state.showMedicalReport">
                   <MedicalReport
                        content="formattedReportContent"
                        title="state.reportTitle"
                        onClose="closeMedicalReport"
                        userData="state.reportUserData"
                        contacts="state.reportContacts"
                        resModel="props.resModel"
                        resId="props.resId"/>

                </t>
            </t>
        </div>
    </t>

</templates>

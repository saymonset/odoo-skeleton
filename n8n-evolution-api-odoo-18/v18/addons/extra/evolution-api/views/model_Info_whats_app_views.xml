<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View model.info_whats_app View List -->
    <record id="view_model_Info_whats_app_list" model="ir.ui.view">
        <field name="name">view.model.info_whats_app.list</field>
        <field name="model">model.info_whats_app</field>
        <field name="arch" type="xml">
            <list>
                <field name="conversation_ia"/>
                <field name="conversation"/>
                <field name="client_phone"/>
                <field name="host_phone"/>
                <field name="message_type"/>
                <field name="instance"/>
                <field name="timestamp"/>
                <field name="thread_id"/>
            </list>
        </field>
    </record>

    <!-- View model.info_whats_app form -->
    <record id="view_model_Info_whats_app_form" model="ir.ui.view">
        <field name="name">view.model.info_whats_app.form</field>
        <field name="model">model.info_whats_app</field>
        <field name="arch" type="xml">
            <form string="Model info_whats_app">
                <sheet>
                    <div class="oe_title">
                        <label for="conversation_ia"/>
                        <h1>
                            <field name="conversation" widget="text" placeholder="Conversation..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="host_phone" placeholder="Host Phone..."/>
                            <field name="client_phone" placeholder="Client Phone..."/>
                            <field name="message_type" placeholder="Message Type..."/>
                        </group>
                        <group>
                            <field name="instance" placeholder="Instance..."/>
                            <field name="apikey" placeholder="API Key..."/>
                            <field name="timestamp"/>
                        </group>
                    </group>
                    <group>
                       <field name="conversation_ia" placeholder="conversation_ia..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View model.info_whats_app search -->
    <record id="view_model_Info_whats_app_search" model="ir.ui.view">
        <field name="name">view.model.info_whats_app.search</field>
        <field name="model">model.info_whats_app</field>
        <field name="arch" type="xml">
            <search>
                <field name="host_phone"/>
                <field name="client_phone"/>
                <field name="message_type"/>
                <field name="instance"/>
                <group expand="1" string="Group By">
                    <filter string="Host Phone" name="host_phone" domain="[]" context="{'group_by':'host_phone'}"/>
                    <filter string="Client Phone" name="client_phone" domain="[]" context="{'group_by':'client_phone'}"/>
                    <filter string="Message Type" name="message_type" domain="[]" context="{'group_by':'message_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action model.info_whats_app -->
    <record id="action_model_Info_whats_app" model="ir.actions.act_window">
        <field name="name">Model Info_whats_app</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">model.info_whats_app</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Model Info_whats_app.
            </p>
        </field>
    </record>


    <menuitem id="menu_whatsapp_api_root" name="info Whatsapp " sequence="10"/>
    <menuitem id="menu_evolution_api"
            name="WhatsApp API"
            parent="menu_whatsapp_api_root"
            action="action_model_Info_whats_app"
            sequence="100"/>

</odoo>

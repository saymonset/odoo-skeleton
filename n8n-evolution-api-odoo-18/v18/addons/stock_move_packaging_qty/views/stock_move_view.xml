<data>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">stock.move.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='main_grp_col2']//field[@name='product_uom_qty']/.."
                position="after"
            >
                <label
                    for="product_packaging_qty"
                    groups="product.group_stock_packaging"
                />
                <div class="o_row" groups="product.group_stock_packaging">
                    <field name="product_packaging_qty" />
                    <field
                        name="product_packaging_id"
                        readonly="not product_id"
                        options="{'no_open': True, 'no_create': True}"
                    />
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_picking_move_tree" model="ir.ui.view">
        <field name="name">stock.picking.move.list</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_picking_move_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom']" position="after">
                <field
                    name="product_packaging_quantity"
                    groups="product.group_stock_packaging"
                    readonly="not product_id or not is_quantity_done_editable or move_lines_count != 1"
                    invisible="not product_packaging_id"
                />
                <field
                    name="product_packaging_id"
                    groups="product.group_stock_packaging"
                />
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_operations" model="ir.ui.view">
        <field name="name">Add product packaging qty info</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_qty']/../.." position="inside">
                <div
                    invisible="not product_packaging_id"
                    groups="product.group_stock_packaging"
                    name="packaging"
                    class="fst-italic text-muted"
                >
                    <span>(</span>
                    <field
                        name="product_packaging_qty"
                        readonly="1"
                        nolabel="1"
                        class="d-inline me-1"
                    />
                    <field
                        name="product_packaging_id"
                        readonly="1"
                        nolabel="1"
                        options="{'no_open': True}"
                        class="d-inline"
                    />
                    <span>)</span>
                </div>
            </xpath>
        </field>
    </record>
</data>

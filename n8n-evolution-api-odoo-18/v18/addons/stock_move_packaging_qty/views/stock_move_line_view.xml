<data>
    <record id="view_stock_move_line_operation_tree" model="ir.ui.view">
        <field name="name">Add product packaging qty done info</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='product_uom_id' and @readonly]"
                position="after"
            >
                <field
                    name="product_packaging_qty"
                    invisible="not product_packaging_id"
                    groups="product.group_stock_packaging"
                    optional="hide"
                    sum="Reserved Packaging Quantity"
                />
                <field
                    name="product_packaging_quantity"
                    groups="product.group_stock_packaging"
                    invisible="not product_packaging_id"
                    readonly="(state == 'done' and is_locked) or (package_level_id and parent.picking_type_entire_packs)"
                    sum="Done Packaging Quantity"
                />
                <field
                    name="product_packaging_id"
                    groups="product.group_stock_packaging"
                />
            </xpath>
        </field>
    </record>

    <record id="view_move_line_form" model="ir.ui.view">
        <field name="name">Add product packaging qty done info</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']/.." position="after">
                <label
                    for="product_packaging_quantity"
                    groups="product.group_stock_packaging"
                />
                <div class="o_row" groups="product.group_stock_packaging">
                    <field name="product_packaging_quantity" />
                    <field
                        name="product_packaging_id"
                        options="{'no_create': True}"
                        string="Packaging"
                    />
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="name">Add product packaging qty done info</field>
        <field name="model">stock.move.line</field>
        <field
            name="inherit_id"
            ref="stock.view_stock_move_line_detailed_operation_tree"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field
                    name="product_packaging_qty"
                    groups="product.group_stock_packaging"
                    optional="hide"
                />
                <field
                    name="product_packaging_quantity"
                    groups="product.group_stock_packaging"
                    readonly="state in ('done', 'cancel') and is_locked"
                />
                <field
                    name="product_packaging_id"
                    groups="product.group_stock_packaging"
                />
            </xpath>
        </field>
    </record>

    <record id="view_move_line_tree_detailed" model="ir.ui.view">
        <field name="name">Add product packaging qty done info</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree_detailed" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field
                    name="product_packaging_quantity"
                    groups="product.group_stock_packaging"
                    invisible="not product_packaging_id"
                    optional="show"
                />
                <field
                    name="product_packaging_id"
                    groups="product.group_stock_packaging"
                    optional="show"
                />
            </xpath>
        </field>
    </record>
</data>

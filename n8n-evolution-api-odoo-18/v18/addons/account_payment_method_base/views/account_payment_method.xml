<odoo>
    <record id="account_payment_method_form" model="ir.ui.view">
        <field name="name">account_payment_method.form</field>
        <field name="model">account.payment.method</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="main">
                        <field name="code" readonly="1" />
                        <field name="payment_type" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="account_payment_method_list" model="ir.ui.view">
        <field name="name">account_payment_method.list</field>
        <field name="model">account.payment.method</field>
        <field name="arch" type="xml">
            <list create="0">
                <field name="name" decoration-bf="1" />
                <field name="code" />
                <field
                    name="payment_type"
                    widget="badge"
                    decoration-success="payment_type == 'inbound'"
                    decoration-warning="payment_type == 'outbound'"
                />
            </list>
        </field>
    </record>
    <record id="account_payment_method_search" model="ir.ui.view">
        <field name="name">account_payment_method.search</field>
        <field name="model">account.payment.method</field>
        <field name="arch" type="xml">
            <search>
                <field
                    name="name"
                    filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"
                    string="Name or Code"
                />
                <filter
                    name="inbound"
                    string="Inbound"
                    domain="[('payment_type', '=', 'inbound')]"
                />
                <filter
                    name="outbound"
                    string="Outbound"
                    domain="[('payment_type', '=', 'outbound')]"
                />
                <group string="Group By" name="groupby">
                    <filter
                        string="Payment Type"
                        name="payment_type_groupby"
                        context="{'group_by': 'payment_type'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="account_payment_method_action" model="ir.actions.act_window">
        <!-- The name "Payment Methods" is already used by account.payment.method.line
        so we use a different name: Technical Payment Methods -->
        <field name="name">Technical Payment Methods</field>
        <field name="res_model">account.payment.method</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem
        id="account_payment_method_menu"
        action="account_payment_method_action"
        parent="account.account_management_menu"
        sequence="30"
    />
</odoo>

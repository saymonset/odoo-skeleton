<?xml version="1.0" ?>
<odoo>
    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="name">stock.move.line.list reset quantity</field>
        <field name="model">stock.move.line</field>
        <field
            name="inherit_id"
            ref="stock.view_stock_move_line_detailed_operation_tree"
        />
        <field name="arch" type="xml">
            <button name="action_put_in_pack" position="before">
                <button
                    class="btn-secondary"
                    name="action_reset_quantity"
                    type="object"
                    string="Reset Quantities"
                    data-hotkey="shift+r"
                />
            </button>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pos_config_view_form_inherit_pos_default_category" model="ir.ui.view">
            <field name="name">pos.config.view.form.inherit.pos.default.category</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_interface_section']" position="inside">
                    <setting string="Categoria por defecto" help="Se Selecciona la categoria por defecto">
                        <div class="content-group mt16">
                            <field name="pos_category_id" colspan="4" options="{'no_open': True, 'no_create': True}"/>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

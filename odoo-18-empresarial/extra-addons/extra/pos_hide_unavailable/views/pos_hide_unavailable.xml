<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_inherit_enable_disable_cash_control" model="ir.ui.view">
        <field name="name">pos.config.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name='hide_unavailable_product'/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="hide_unavailable_product"/>
                        <div class="text-muted">
                            POS Hide Out Of Stock Products
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
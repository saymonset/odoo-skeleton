<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_average_sales_form" model="ir.ui.view">
        <field name="name">wizard.average.sales.view.form</field>
        <field name="model">wizard.average.sales</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="pricelist_ids" widget="many2many_tags"/> 
                    </group>
                    <group>
                         <field name="expense_percentage" placeholder="Ingrese el porcentaje de gasto"/>       
                    </group>
                </group>
                    
                <footer>
                    <button name="print_report" string="Imprimir" type="object" default_focus="1" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_average_sales_report_action" model="ir.actions.act_window">
        <field name="name">Informe Promedio de Ventas</field>
        <field name="res_model">wizard.average.sales</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="wizard_average_sales_report_menu"
        action="wizard_average_sales_report_action"
        parent="stock.menu_warehouse_report"
        sequence="49"/>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
  <odoo>
    <!-- View res_partner_view form -->
    <record id="view_res_partner_view_form" model="ir.ui.view">
        <field name="name">view.res_partner_view_visibility.form</field>
        <field name="model">res.partner</field>
        <!-- account.view_move_form -->
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='sales_purchases']/group/group[@name='sale']/field[@name='user_id']"
             position="after"
             >
             <field name="not_allowed_products_ids" widget="many2many_tags"></field>
            </xpath>
        </field>
    </record>



  </odoo>
<?xml version="1.0" encoding="utf-8"?>
  <odoo>
      
     <template id="inherit_payment_screen_methods" inherit_id="point_of_sale.PaymentScreenMethods">
        <!-- Agregar un nuevo mÃ©todo de pago al final -->
        <xpath expr="//div[@class='paymentmethods']" position="inside">
            <div class="button paymentmethod btn btn-light btn-lg lh-lg flex-fill"
                t-on-click="() => this.addNewPaymentLine({id: 'custom_method', name: 'Custom Method'})">
                <div class="payment-method-display d-flex align-items-center gap-2 text-wrap text-start lh-sm">
                    <img class="payment-method-icon" src="/your_module_name/static/img/custom_icon.png" />
                    <span class="payment-name">Custom Method</span>
                </div>
            </div>
        </xpath>
    </template>

  </odoo>